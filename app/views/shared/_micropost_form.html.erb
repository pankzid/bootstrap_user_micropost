<%= form_for @micropost, html: { class: "form-horizontal col-sm-6", role: "form" } do |f| %>
	<%= render partial: 'shared/error_messages', locals: {object: f.object} %>
  <div class="form-group col-sm-12">
  	<h3>New micropost</h3>
  </div>
  <div class="form-group col-sm-12">
    <%= f.text_area :content, class: "form-control", placeholder: 'Compose new micropost' %>
  </div>  

  <div class="form-group">
    <div class="col-sm-12">
      <%= f.submit "Post", class: "btn btn-primary" %>
    </div>
  </div>
  
<% end %>