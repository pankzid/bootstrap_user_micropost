<% if object.errors.any? %>
	<div class="col-sm-12">
		<div class="alert alert-warning">
			<p>The form contain <%= pluralize(object.errors.count, 'error') %>.</p>
			<ul>
				<% object.errors.full_messages.each do |message| %>
				<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>