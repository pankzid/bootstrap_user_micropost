<tr>
	<td><%= user.id %></td>
	<td><%= link_to user.email, user %></td>
	<td><%= user.name %></td>
	<td><%= image_tag user.image_base64, alt: user.name, class: 'img-circle' %></td>
	<% if user_signed_in? && authorize_user?(user) %>
		<td><%= link_to 'Edit', edit_user_path(user) %></td>
		<td><%= link_to 'Delete', user, method: :delete, data: {confirm: "Are you sure!"} %></td>
	<% end %>
</tr>
